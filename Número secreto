from random import randint
num_secreto=randint(0,50)
vidas=5
print('~'*10, 'Seja bem vindo ao jogo, tente adivinhar o número secreto que está entre 0 e 50', '~'*10)
print('~'*10, f'Você tem {vidas} vidas', '~'*10,)
while vidas>0:
  num=int(input('Chute um valor: '))
  if num == num_secreto:
    print('Parabéns, você acertou o número secreto')
    break
  elif num>num_secreto:
    print('Você errou, tente um número menor')
    vidas=vidas-1
  elif num<num_secreto:
    print('Você errou, tente um número maior')
    vidas=vidas-1

  print('-='*20)
  print(f'Voce tem {vidas} vida(s)')
if (num!=num_secreto) and (vidas==0):
  print('Suas vidas acabaram, você perdeu')
  print(f'o número era {num_secreto}')
